{
    "name": "shopware/ci",
    "description": "Internal Shopware ci tools",
    "type": "project",
    "require": {
        "php": "~7.4",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-simplexml": "*",
        "composer/semver": "^1.5",
        "guzzlehttp/guzzle": "^6.5",
        "league/flysystem-aws-s3-v3": "^1.0",
        "league/flysystem-memory": "^1.0",
        "symfony/console": "~5.2.3",
        "symfony/dotenv": "~5.2.3",
        "titasgailius/terminal": "^0.4.0"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.1.0",
        "phpstan/phpstan": "^0.12.88",
        "phpstan/phpstan-doctrine": "^0.12.34",
        "phpstan/phpstan-phpunit": "^0.12.19",
        "phpstan/phpstan-symfony": "^0.12.33",
        "phpunit/phpunit": "8.5.8",
        "symfony/debug-bundle": "^5.2",
        "symplify/easy-coding-standard": "^9.3.12"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Patrick Weyck",
            "email": "p.weyck@shopware.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Shopware\\CI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shopware\\CI\\Test\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
